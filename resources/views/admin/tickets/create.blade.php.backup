<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form elements
        const nameInput = document.getElementById('name');
        const descriptionInput = document.getElementById('description');
        const priceInput = document.getElementById('price');
        const hasCapacityCheckbox = document.getElementById('hasCapacity');
        const capacityInput = document.getElementById('capacity');
        const capacitySection = document.getElementById('capacitySection');

        // Preview elements
        const previewName = document.getElementById('previewName');
        const previewPrice = document.getElementById('previewPrice');
        const previewDescription = document.getElementById('previewDescription');
        const previewDescriptionText = document.getElementById('previewDescriptionText');
        const previewCapacity = document.getElementById('previewCapacity');
        const previewCapacityText = document.getElementById('previewCapacityText');

        // Update preview in real-time
        function updatePreview() {
            // Update name
            previewName.textContent = nameInput.value || 'Ticket Name';

            // Update price
            const price = parseFloat(priceInput.value) || 0;
            previewPrice.textContent = price === 0 ? 'Free' : `$${price.toFixed(2)}`;

            // Update description
            if (descriptionInput.value.trim()) {
                previewDescriptionText.textContent = descriptionInput.value;
                previewDescription.style.display = 'block';
            } else {
                previewDescription.style.display = 'none';
            }

            // Update capacity
            if (hasCapacityCheckbox.checked && capacityInput.value) {
                previewCapacityText.textContent = capacityInput.value;
                previewCapacity.style.display = 'block';
            } else {
                previewCapacity.style.display = 'none';
            }
        }

        // Event listeners for real-time preview
        nameInput.addEventListener('input', updatePreview);
        descriptionInput.addEventListener('input', updatePreview);
        priceInput.addEventListener('input', updatePreview);
        capacityInput.addEventListener('input', updatePreview);

        // Capacity toggle
        hasCapacityCheckbox.addEventListener('change', function() {
            capacitySection.style.display = this.checked ? 'block' : 'none';
            if (!this.checked) {
                capacityInput.value = '';
            }
            updatePreview();
        });

        // Fill example function
        window.fillExample = function(name, description, price) {
            nameInput.value = name;
            descriptionInput.value = description;
            priceInput.value = price.toFixed(2);
            updatePreview();
        };

        // Initial preview update
        updatePreview();
    });
</script>
@endpush